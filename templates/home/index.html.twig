{% extends 'layout/base.html.twig' %}

{% block title %}Book Store | Home{% endblock %}
{% block stylesheets %}
    <link href=" {{ asset('css/style.css') }}" rel="stylesheet">
{% endblock %}
{% block body %}

    <div class="row justify-content-md-center pt-4">
        <div class="col-md-8">
